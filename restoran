void giris(){
	
 int secim4;
 char kullaniciadi[30], sifre[30];
	
 printf("\n\n");
	
 printf("\t\t\t\t\t\tKullanici adinizi giriniz: ");
 scanf("%s",&kullaniciadi);
	
 printf("\t\t\t\t\t\tSifrenizi giriniz: ");
 scanf("%s",&sifre);
	
 printf("\t\t\t\t\t\tGiris Basarili.");
 printf("\n\n");
	
 printf("Ana menuye donmek icin 0'a basiniz: ");
 scanf("%d",&secim4);
	
 if (secim4==0){
  system("cls");
  ana_menu();
 }
 else{
  system("cls");
  printf("Gecersiz secim. Lutfen tekrar deneyiniz\n");
  sleep(1);
  system("cls");
  sleep(1);
  giris();
 }
	
}


void kayit_ol() {
    int secim5;
    char telefon[15], kullaniciadi[30], sifre[30];
    
    printf("\n\n");
    
    printf("\t\t\t\t\t\tTelefon numaranizi giriniz: ");
    scanf("%s", telefon);
    
    printf("\t\t\t\t\t\tKullanici adinizi giriniz: ");
    scanf("%s", kullaniciadi);
    
    printf("\t\t\t\t\t\tSifrenizi giriniz: ");
    scanf("%s", sifre);
    
    printf("\t\t\t\t\t\tKayit Basarili.\n\n");
    
    printf("Ana menuye donmek icin 0'a basiniz: ");
    scanf("%d", &secim5);
    
    if (secim5 == 0) {
        system("cls");
        ana_menu();
    } else {
        system("cls");
        printf("Gecersiz secim. Lutfen tekrar deneyiniz\n");
        sleep(1);
        system("cls");
        sleep(1);
        kayit_ol();
    }
}


